<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_item_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/category_item_height"
    android:layout_marginHorizontal="@dimen/list_item_spacing_horizontal"
    android:layout_marginVertical="@dimen/list_item_spacing_vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/gradient_bg"
        android:layout_width="@dimen/gradient_width"
        android:layout_height="@dimen/gradient_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gradient_bg" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/category_item_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="68dp"
        android:textAppearance="@style/CardImgTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/gradient_bg"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Category" />

</androidx.constraintlayout.widget.ConstraintLayout>