<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardImgTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardItemImgInfo">
        <item name="android:textColor">@color/medium_white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CardDescriptionTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CardDescription">
        <item name="android:textColor">@color/medium_white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="CardDescriptionReadMoreAction" parent="@style/CardDescriptionTitle">
        <item name="android:textColor">@color/card_info_icon_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:height">@dimen/entry_fragment_button_height</item>
    </style>
</resources>